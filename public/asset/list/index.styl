.news-container
    padding-top: 88px

.news-item
    display: block
    padding: 10px 15px

    color: #000
    text-decoration: none

    $item-bg-color = #dfdfdf

    &:active
        background: $item-bg-color

    // border
    border-bottom: 1px solid $item-bg-color

    // 1px border on retina
    background-size: 0
    +retina()
        border: none
        background-image: linear-gradient(0deg, $item-bg-color, $item-bg-color 50%, transparent 50%)
        background-position: bottom
        background-size: 100% 1px
        background-repeat: no-repeat

    [data-role~=title]
        padding: 3px 0
        font-size: rem(16)
        line-height: rem(20)
        &[data-state~=read]
            color: #9b9b9b

    [data-role~=meta]
        display: block
        font-size: rem(12)
        font-weight: 300
        line-height: rem(18)
        color: #9b9b9b
        clearfix()

    [data-role~=author]
    [data-role~=count]
        float: left

    [data-role~=time]
    [data-role~=host]
        float: right

.news-list-more
    display: block
    text-align: center
    line-height: 3rem
    background: #f7f7f7
    color: #666
